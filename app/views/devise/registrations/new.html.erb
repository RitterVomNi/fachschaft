<style type="text/css">
    #link7 {color:blue;}
</style>
<div id="sign-content">
  <div class="page-signin ng-scope">

    <div class="signin-header" style="margin:auto">
      <section class="logo text-center">
        <h2 style="padding-top:20px">Registrieren</h2>
      </section>
    </div>

    <div class="signin-body">
      <div class="container">
        <label class="form-container">

          <fieldset>
            <%= form_for(resource, as: resource_name, :html => {class:"form-horizontal ng-pristine ng-valid"}, url: registration_path(resource_name)) do |f| %>
                <p class="notice"><%= notice %></p>
                <%= devise_error_messages! %>

                <div class="form-group">
                  <div class="input-group input-group-first">
                    <span class="input-group-addon">
                        <span class="ti-email"></span>
                    </span>
                    <%= f.email_field :email, autofocus: true, class:"form-control input-lg", placeholder:"@fh-muenster Adresse" %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                        <span class="ti-lock"></span>
                    </span>
                    <%= f.password_field :password, autocomplete: "off", class:"form-control input-lg", placeholder:"Passwort, min 8 Zeichen"  %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                        <span class="ti-lock"></span>
                    </span>
                    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control input-lg", placeholder:"Passwort wiederholen"   %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                        <span class="ti-user"></span>
                    </span>
                    <%= f.text_field :firstName, autocomplete: "off", class:"form-control input-lg", placeholder:"Vorname"   %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                        <span class="ti-user"></span>
                    </span>
                    <%= f.text_field :lastName, autocomplete: "off", class:"form-control input-lg", placeholder:"Nachname"   %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                        <span class="ti-book"></span>
                    </span>Studiengang
                    <span class="ui-select" uib-dropdown-toggle="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= f.select :studiengang,  options_for_select(%w[ BWL BA-Wirtschaftsinformatik MA-Wirtschaftsinformatik CALA EBP A&F IMS Logistik]) %>
                        </span>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                        <span class="ti-facebook"></span>
                    </span>
                    <%= f.text_field :facebook, autocomplete: "off", class:"form-control input-lg", placeholder:"URL Facebook Account"   %>

                  </div>
                  <span class="help-block">(optional)</span>
                </div>
                <br><br>
                <div class="form-group">
                  <p class="notice"><%= notice %></p>
                  <p class="alert"><%= alert %></p>
                  <%= f.submit "Registrieren", class:"btn btn-primary btn-lg btn-block text-center" %>
                </div>
            <% end %>
            <br>
            <div>
              <%= render "devise/shared/links" %>
            </div>
          </fieldset>
        </label>
    </div>
  </div>
</div>
    </div>