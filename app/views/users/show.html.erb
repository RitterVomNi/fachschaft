<p id="notice"><%= notice %></p>

<div class="panel panel-default" style="margin:0 5px 0 5px">
  <div class="panel-heading"><strong>Profil</strong></div>
  <div class="panel-body">
<p>
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div id="member" class="widget-container" style="border: solid 1px; margin:5px 0 10px">
      <div class="panel panel-profile">
        <div class="panel-heading bg-danger clearfix">
          <img src="<%= asset_path('Gruppenfoto.png') %> " class="img-circle img80_80" style="float:left">
          <div style="text-align: center; margin-left:-500px">
            <h3 class="ng-binding"><%= @user.firstName %></h3>
    <p><%= @user.lastName %></p>
  </div>
</div>
<ul class="list-group">
  <% if @user.is_fs || @user.is_admin%>
    <li class="list-group-item">
      <i class="ti-user" data-toggle="tooltip" title="Hauptaufgabe"></i>
      <% if @user.team_id != nil %>
          <%= @teams.find_by(id: @user.team_id).teamName %>
      <% else %>
          Keine Angaben
      <% end %>
    </li>
  <% end %>
  <li class="list-group-item">
    <i class="ti-book" data-toggle="tooltip" title="Studiengang"></i>
    <% if @user.studiengang != nil %>
        <%= @user.studiengang %>
    <% else%>
        Keine Angaben
    <% end %>
  </li>
  <li class="list-group-item">
    <i class="ti-facebook" data-toggle="tooltip" title="Facebook"></i>
    <a href="<% if @user.facebook != nil %>
          <%= @user.facebook %>">Link zu Facebook</a>
    <% else %>
    Keine Angaben
    <% end %>
    </li>
  <li class="list-group-item">
    <a href="#" class="btn btn-primary btn-xs" style="float:right">Nach oben</a>
  </li>
</ul>
</div>
</div>
</div>

</p>
</div>
</div>