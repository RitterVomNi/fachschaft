        <button class="btn btn-primary" id="show2"><span class="glyphicon glyphicon-arrow-down"></span>Fast neu</button><br><br>
        <section class="ui-timeline"  id="toggle2">
            <% helper = @contents.where(ok_admin: true).count %>
          <% if helper >5 %>
