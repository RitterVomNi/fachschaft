  <div class="tab-content">
  <div id="news" class="tab-pane fade in active">
    <div class="ui-timline-container" style="max-width:100%">
      <!-- Timeline for the newest content (all categories) -->
      <a href="javascript:;" class="btn btn-w-md btn-primary btn-direction btn-down" id="show">Neueste</a><br><br>
      <section class="ui-timeline"  id="toggle">
        <% @contents.order(created_at: :desc).limit(10).first(5).each do |content| %>
            <!-- Left side of the timeline -->
            <% if (content.id%2) == 0 %>
                  <article class="tl-item">
                  <%= render partial: "index_timeline", locals: {content: content} %>
                      </article>
            <% else %>
                <!-- Right side of the Timeline -->
                  <article class="tl-item alt trick">
                  <%= render partial: "index_timeline", locals: {content: content} %>
                      </article>

            <% end %>
        <% end %>

      </section>
    </div>
  </div>

